# Odoo Configuration
ODOO_DOMAIN=odoo.yourdomain.com

# Odoo Version - Supported versions:
# - 19.0 (Latest - Recommended)
# - 18.0 (LTS - Long Term Support)
# - 17.0 (Community Edition)
# - 16.0 (Community Edition)
# Simply change the version number below to deploy a different version
ODOO_VERSION=19.0

ODOO_REPLICAS=1


# Database Configuration
# WARNING: On a new install, these must match exactly what Odoo uses to connect
POSTGRES_USER=odoo
POSTGRES_PASSWORD=odoo
POSTGRES_DB=postgres

# Odoo Configuration
ODOO_DB_USER=odoo
ODOO_DB_PASSWORD=odoo

# Let's Encrypt SSL
LETSENCRYPT_EMAIL=your-email@example.com

# Storage
ODOO_DATA_SIZE=20Gi
POSTGRES_DATA_SIZE=10Gi

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2:00 AM
